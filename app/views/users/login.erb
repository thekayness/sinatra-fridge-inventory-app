<% if flash.has?(:message) %>
  <h1><%= flash[:message] %></h1>
<% end %>
<h3>Login</h3>
<form action="/login" method="POST">
  <input type="text" name="username" placeholder="Username:">
  <input type="password" name="password" placeholder="Password:">
  <input type="submit" value="Log In" id="submit">
</form>
